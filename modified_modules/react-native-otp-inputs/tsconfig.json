{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "baseUrl": "./lib",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "esnext"
  },
  "filesGlob": ["types/index.d.ts", "lib/*.tsx", "lib/*.ts"],
  "exclude": ["android", "ios", "build", "node_modules"],
  "compileOnSave": false
}
